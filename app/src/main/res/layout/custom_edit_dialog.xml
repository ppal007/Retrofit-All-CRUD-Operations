<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="Registration"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/etCustomEditDialogName_id"
        android:hint="user name"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etCustomEditDialogEmail_id"
        android:hint="user email"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etCustomEditDialogPhone_id"
        android:hint="user phone number"
        android:padding="10dp"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btnCustomEditDialogCancelId"
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="6dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnCustomEditDialogId"
            android:text="Update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="6dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>